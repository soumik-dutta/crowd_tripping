<script>
   $(document).ready(function(){
        $('.ui.radio.checkbox')
            .checkbox()
       ;

        $('.ui.checkbox')
            .checkbox()
        ;
       
       
       
   });
    
    //coping home_address to bill_address on clicking the check box
    $('#import_details').change(function(){
        //getting the latitude and longitude
        
       
        if(this.checked){
            //on clecking fill bill_address
            $('#bill_house_no').val($('#home_house_no').val())   ;
            $('#bill_street').val($('#home_street').val())   ;
            $('#bill_city').val($('#home_city').val())   ;
            $('#bill_country').val($('#home_country').val())   ;
            $('#bill_pin').val($('#home_pin').val())   ;
        }
        else{
            //on unchecking empty the bill_address
             $('#bill_house_no').val("")   ;
             $('#bill_street').val("")   ;
             $('#bill_city').val("")   ;
             $('#bill_country').val("")   ;
             $('#bill_pin').val("")   ;
        }
    
    });
    
    
    //saving curr geolocation retrieved from the browser
    $('#save_curr_loc').change(function(){
        if(this.checked){
            var lat=getCookie('latitude');
            var lng=getCookie('longitude');
            alert(lat)
            $('#home_latitude').val(lat);
            $('#home_longitude').val(lng);
        }
        else{
            $('#home_latitude').val("");
            $('#home_longitude').val("");  
        }
        
    });
    
</script>